    border 0
    background-color #fff
    position relative
    margin 20px 0 
    &:first-child
      padding-top 40px
    .imgbox
      width 50%
      -webkit-mask-image none
      float left
      height 100%
      &:after
        position absolute
        content ''
        bottom 0
        right 0
        border-bottom 300px solid #F1F1F1
        border-left 150px solid transparent
  .content .even
    border 1px solid #F1F1F1
    .box
      background-color #fff
      .imgbox
        float right
        -webkit-mask-image -webkit-linear-gradient(left top, transparent 30%, #fff 30%)
        &:after
          content none
          
      .description
        background-color #fff
        float left
        .title
          margin-left 20px
  .menu
    display block
    position static
    padding-top 45px
    ul
      float left
      padding 0
      width 100%
      text-align center
      li
        display inline-block
        font-size 14px
        border 0
        a
          color white
          background-color #1C4477
          transition all 0.5s
          padding 5px
          &:hover
            color black
            text-decoration none
   .logo
    position absolute
    transform translateY(-50%)
    margin 0
    left -3%
  .description
    float right
    width 50%
    height 100%
    background-color #f1f1f1
    position relative
    .title 
