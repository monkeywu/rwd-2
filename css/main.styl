.hamburger {
  width: 140px;
  height: 110px;
  position: absolute;
  top: 50%;
  margin-top: -55px;
  left: 50%;
  margin-left: -60px;
  cursor: pointer;
  .hamburger-span {
    position: absolute;
    width: 100%;
    height: 20px;
    background: black;
    border-radius: 10px;
    transition: 0.6s;
  }
  
  .hamburger-span:nth-child(2){
    top: 45px;
  }
  
  .hamburger-span:nth-child(3){
    top: 45px;
  }
  
  .hamburger-span:nth-child(4){
    top: 90px;
  }
  }

.hamburger.open {
  .hamburger-span{
    background: black; 
    transition: 0.6s;
  }
  
  .hamburger-span:nth-child(1) {
    transform: translateY(45px);
    opacity: 0;
  }
  
  .hamburger-span:nth-child(2) {
    transform: rotate(45deg);
  }
  
  .hamburger-span:nth-child(3) {
    transform: rotate(-45deg);
  }
  
  .hamburger-span:nth-child(4) {
    transform: translateY(-45px);
    opacity: 0;
  }
}