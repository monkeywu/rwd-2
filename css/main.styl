/*  common  */
a 
  display block
  transition all 0.5s
  &:hover
    text-decoration none
img 
  display block
ul
  padding 0
  margin 0
li
  list-style none
.container
  padding-left 0px
  padding-right 0px

/*  header    */
.header
  height 60px
  .container
    position relative
    height 100%
.hamburger {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 50%;
  left: 8%;
  transform translateY(-50%)
  cursor: pointer;
  z-index: 101;
  
  .hamburger-span {
    position: absolute;
    width: 100%;
    height: 5px;
    background: #324397;
    border-radius: 1px;
    transition: 0.6s;
  }
  
  .hamburger-span:nth-child(2){
    top: 10px;
  }
  
  .hamburger-span:nth-child(3){
    top: 10px;
  }
  
  .hamburger-span:nth-child(4){
    top: 20px;
  }
}

.open {
  
  .hamburger-span{
    background: #0055AA; 
    transition: 0.6s;
  }
  
  .hamburger-span:nth-child(1) {
    transform: translateY(45px);
    opacity: 0;
  }
  
  .hamburger-span:nth-child(2) {
    transform: rotate(45deg);
  }
  
  .hamburger-span:nth-child(3) {
    transform: rotate(-45deg);
  }
  
  .hamburger-span:nth-child(4) {
    transform: translateY(-45px);
    opacity: 0;
  }
}

.logo
  width 150px
  position absolute
  transform translate(-50%,-50%)
  left 50%
  top 50%
  img
    width 50%
    height auto
    margin 0 auto
.search
  position absolute
  top 50%
  right 8%
  transform translateY(-50%)
  font-size 20px
  a
    color #324397
.label
  display none
.menu 
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color #fff
  z-index 100
  display none
  li
    font-size 20px
    padding-bottom 20px
    border-bottom 2px solid
    &:nth-child(odd)
      text-align right
    a
      color black  
/*    slider     */
.carousel-caption
  font-size 19px
  font-weight bold
  text-align left
  .learn
    font-size 14px
    font-weight 500
    margin 10px 0 10px 0
    text-align center
    a
      color white
      span
        border 1px solid 
        border-radius 10px
        padding 5px
        transition all 0.5s
        &:hover
          color black
          background-color white
          text-decoration none
.carousel-control
  display none
/*       content      */
.content .c-box
  background-color #27262C
  border 15px solid #27262C
  margin 0 auto
  &:first-child
    padding-top 15px
  &:last-child
    padding-bottom 15px
.box
  position relative
  overflow hidden
  background-color #f1f1f1
.imgbox
  position relative
  overflow hidden
  width 100%
  -webkit-mask-image -webkit-linear-gradient(left top, transparent 10%, #27262C 10%)
  img
    width 100%
    transition all 0.5s
    &:hover
      transform scale(1.2)
.description
  padding 10px 0
  background-color white
  h3
    margin 0 0 0 10px
    font-size 17px
    &:first-child
      padding-top 10px
.title
  p
    display none
  a
    display none
.social-media
  text-align center
  background-color #f1f1f1
  ul
    padding 10px 0
    width 100%
    li
      float left
      list-style none
      width 33%
      a
        color #D2D2D2
        display inline-block
        line-height 30px
        width 30px
        height 30px
        border 1px solid
        border-radius 99em
        &:hover
          background black
          color white 
/*    footer      */
.copy
   text-align center
   background-color #111
   border 15px solid #111
   h3
    font-size 15px
    margin 0 0 15px 0
    color #A0A0A0
    &:first-child
      padding-top 15px
.link
  display none      
.footer-social-media 
  background-color #111
  ul
    text-align center
    padding-bottom 15px
    li
      display inline-block
      width 20%          
      a
        color #A0A0A0
        font-size 20px
        &:hover
          color white
.rotate
  transform rotate(45deg) 
  


/*  @media   */
@media (min-width:450px) 
  .carousel-control
    display block
  .carousel-caption
    font-size 30px
    .learn
      text-align left
@media (min-width:768px) 
  .container
    padding-left 15px
    padding-right 15px
    max-width 768px
  .header
    height 120px
    .container
      max-width 100%
  .item img
    width 100%
  .label
    display block
  .carousel-caption
    font-size 38px
    .learn
      position absolute
      right -20%
      bottom 15%

@media (min-width:1024px) 
